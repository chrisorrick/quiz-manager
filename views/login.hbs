<div class="login-page">
  <h1>Quis</h1>
  <div class="card">
    <form class="" action="/login" method="post">
      <div class="input-container">
        <label for="username">Username</label>
        <input type="username" class="text-input" name="username" placeholder="Username" value="{{username}}" required>
      </div>
    
      <div class="input-container">
        <label for="password">Password</label>
        <input type="password" class="text-input" name="password" value="" placeholder="Password" required>
      </div>

      <div class="input-container">
        <button type="submit" name="button" class="btn">Login</button>
      </div>
    </form>
  </div>
</div>